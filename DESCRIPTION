Package: MethodOpt
Title: Advanced Method Optimization for Spectra-Generating Sampling and
        Analysis Instrumentation
Version: 1.0.0
Authors@R: 
    c(
    person(given = "Benjamin",
           family = "Luke",
           role = "aut",
           email = "benjamin.luke@srnl.doe.gov"),
    person("Stephanie", "Gamble", role = c("aut","cre"), email = "stephanie.gamble@srnl.doe.gov"),
